<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">


    <ImageView
        android:id="@+id/immagineTrends"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:src="@drawable/no_img_movie" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titoloTrends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Titolo"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descrizioneTrends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Didascalia o Review o data"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/release_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorAccent"
            android:drawableLeft="@drawable/ic_add_alert_black_24dp"
            android:drawablePadding="2dp"
            android:text="xx/xx/xx"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="italic"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>